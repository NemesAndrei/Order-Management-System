<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Presentation.OrderController">
    <children>
        <Label fx:id="orderMenuLabel" layoutX="46.0" layoutY="52.0" text="Order Menu"/>
        <Button fx:id="showOrders" layoutX="46.0" layoutY="79.0" mnemonicParsing="false" onAction="#displayOrders"
                prefHeight="25.0" prefWidth="95.0" text="View Orders"/>
        <Button fx:id="addOrder" layoutX="46.0" layoutY="117.0" mnemonicParsing="false" onAction="#createOrder"
                prefHeight="25.0" prefWidth="95.0" text="Add Order"/>
        <Button fx:id="generateBills" layoutX="46.0" layoutY="153.0" mnemonicParsing="false" onAction="#displayBills"
                prefHeight="25.0" prefWidth="95.0" text="Generate Bills"/>
        <TableView fx:id="ordersTable" layoutX="164.0" layoutY="30.0" onSort="#showOrdersTable" prefHeight="367.0"
                   prefWidth="430.0" visible="false"/>
        <ComboBox fx:id="selectClientCombo" layoutX="329.0" layoutY="57.0" onAction="#selectClient1" prefWidth="150.0"
                  visible="false"/>
        <ComboBox fx:id="selectProductCombo" layoutX="329.0" layoutY="105.0" onAction="#selectProduct1"
                  prefWidth="150.0" visible="false"/>
        <Label fx:id="selectClientLabel" layoutX="226.0" layoutY="61.0" text="Select Client" visible="false"/>
        <Label fx:id="selectProductLabel" layoutX="226.0" layoutY="109.0" text="Select Product" visible="false"/>
        <Label fx:id="selectQuantityLabel" layoutX="226.0" layoutY="166.0" text="Select Quantity" visible="false"/>
        <TextField fx:id="selectQuantityT" layoutX="329.0" layoutY="162.0" onAction="#selectQuantity1"
                   promptText="Insert Quantity" visible="false"/>
        <Button fx:id="insertOrderButton" layoutX="307.0" layoutY="214.0" mnemonicParsing="false"
                onAction="#submitOrder" text="Insert Order" visible="false"/>
    </children>
</AnchorPane>
